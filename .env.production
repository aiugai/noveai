# 生产环境全局变量
# 用于生产环境的配置

# =============================================================================
# 应用基础配置
# =============================================================================
# 注意：不要在 .env.* 文件中设置 NODE_ENV。用 APP_ENV 表示当前环境。
APP_ENV=production

# =============================================================================
# 数据库配置 (生产环境)
# =============================================================================
POSTGRES_HOST=__SET_IN_env.local__
POSTGRES_USER=__SET_IN_env.local__
POSTGRES_PASSWORD=__SET_IN_env.local__
POSTGRES_PORT=__SET_IN_env.local__

# Prisma需要的数据库 URL（按环境区分库名）
DATABASE_URL=__SET_IN_env.local__

# =============================================================================
# Redis 配置 (生产环境)
# =============================================================================
REDIS_HOST=__SET_IN_env.local__
REDIS_PORT=__SET_IN_env.local__
REDIS_PASSWORD=__SET_IN_env.local__
REDIS_DB=__SET_IN_env.local__
REDIS_URL=__SET_IN_env.local__

# =============================================================================
# JWT 配置 (生产环境)
# =============================================================================
# 真实值请放入 .env.production.local
JWT_SECRET=__SET_IN_env.local__
JWT_EXPIRES_IN=30d
JWT_ACCESS_EXPIRATION=2592000


# =============================================================================
# 日志配置 (生产环境)
# =============================================================================
LOG_LEVEL=warn
# e2e fixtures 使用的测试日志级别（默认 error）；生产通常不使用，仅为模板完整性保留
TEST_LOG_LEVEL=error

# 日志上下文过滤器：仅在 LOG_CONTEXT_FILTER 中列出的模块会输出日志
# 留空则输出所有模块的日志
# 格式：逗号分隔的 context 名称列表
LOG_CONTEXT_FILTER=

# =============================================================================
# Message Bus / 参与度 去重配置（生产环境）
# =============================================================================
# 发布任务指数回退的初始 delay（毫秒）
MESSAGEBUS_BACKOFF_DELAY_MS=1000
# 参与度事件分布式去重窗口（秒）
ENGAGEMENT_DEDUPE_TTL_SEC=300

# =============================================================================
# 前端/管理端配置 (生产环境)
# =============================================================================
# 用于客户端判定环境、特性开关等，需与 APP_ENV 保持一致
NEXT_PUBLIC_APP_ENV=${APP_ENV}
VITE_APP_ENV=${APP_ENV}


# =============================================================================
# Email Configuration (全局共享)
# =============================================================================
# Resend API for email verification
RESEND_API_KEY=__SET_IN_env.local__
EMAIL_FROM=noreply@ugirl.ai
EMAIL_FROM_NAME=AI Platform

//允许的域名
FRONTEND_URL=https://www.aixiaoshuo.vip
FRONTEND_REDIRECT_ORIGINS=https://www.aixiaoshuo.vip,https://adqwe.aixiaoshuo.vip/
OAUTH_CALLBACK_TOKEN_STRATEGY=query
# OAuth 回调令牌传递策略：query（默认，兼容旧前端）或 cookie（更安全，需前后端配合）

# Google Analytics ID
NEXT_PUBLIC_GA_ID=G-XJPT935GJQ

# Google Tag Manager ID
NEXT_PUBLIC_GTM_ID=GTM-ZDZBMD88GZ

# 前端日志级别配置 (可选值: SILLY | TRACE | DEBUG | INFO | WARN | ERROR | FATAL)
# 生产环境默认 WARN,仅输出警告和错误,减少日志噪音
NEXT_PUBLIC_LOG_LEVEL=WARN

# 限流时间窗口（秒）
THROTTLE_TTL=60

# 限流请求数量
THROTTLE_LIMIT=60

# 是否启用 Redis 作为限流存储
THROTTLE_REDIS_ENABLE=true

# =============================================================================
# AI 配置 (生产环境)
# =============================================================================
# UniAPI 配置（AI 模块使用）
UNIAPI_API_KEY=__SET_IN_env.local__
UNIAPI_BASE_URL=__SET_IN_env.local__

VITE_API_SERVER_URL=https://backend.ugirl.ai/api/v1
VITE_APP_TITLE=AI Admin Dashboard
VITE_APP_VERSION=1.0.0
VITE_DEBUG=false
VITE_DEV_TOOLS=false

NEXT_PUBLIC_API_BASE_URL=https://backend.aixiaoshuo.vip/api/v1

# =============================================================================
# Seed 数据配置 (生产环境)
# =============================================================================
# 系统钱包初始余额控制（生产环境强制禁止自动创建）
SEED_INIT_WALLET_BALANCE=false


# 只输出我们关心的模块日志
LOG_CONTEXT_FILTER=

# 设置为 debug 级别以看到详细信息
LOG_LEVEL=warn

