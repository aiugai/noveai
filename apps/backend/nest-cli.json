{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "webpackConfigPath": "webpack.config.js",
    "outputFileExtension": ".cjs",
    "assets": [
      {
        "include": "modules/ai.model/utils/tokenizers/**/*.model",
        "outDir": "../../dist/backend/apps/backend/src",
        "watchAssets": true
      },
      {
        "include": "modules/ai.model/utils/tokenizers/**/*.json",
        "outDir": "../../dist/backend/apps/backend/src",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "outDir": "../../dist/backend/apps/backend/src",
        "watchAssets": true
      }
    ]
  }
}
