{
  "version": 2,
  "buildCommand": "bun run build",
  "outputDirectory": "build",
  "redirects": [
    {
      "source": "/:path*/index.txt",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/index.txt",
      "destination": "/",
      "permanent": true
    }
  ],
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1920, 2048, 3840],
    "domains": [
      "source.unsplash.com",
      "images.unsplash.com",
      "ext.same-assets.com",
      "ugc.same-assets.com"
    ]
  },
  "framework": "nextjs"
}
